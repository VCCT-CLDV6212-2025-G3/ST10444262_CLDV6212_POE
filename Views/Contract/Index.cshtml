@model List<string>

@{
    ViewData["Title"] = "Manage Contracts";
}

<div class="container mt-4">
    <h1 class="mb-4 fw-bold"><i class="bi bi-folder2-open me-2"></i> Manage Contracts</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Upload Form -->
    <div class="card shadow-sm border-0 mb-4 p-4">
        <form asp-action="Upload" method="post" enctype="multipart/form-data">
            <div class="input-group">
                <input type="file" name="file" class="form-control rounded-pill" accept=".pdf,.docx,.txt" />
                <button type="submit" class="btn btn-outline-primary rounded-pill ms-2 px-4">
                    <i class="bi bi-upload me-2"></i> Upload
                </button>
            </div>
        </form>
    </div>

    <!-- File List -->
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white fw-semibold">
            Contracts
        </div>
        <div class="card-body p-0">
            @if (Model != null && Model.Any())
            {
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>File Name</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var fileName in Model)
                        {
                            <tr>
                                <td>@fileName</td>
                                <td class="text-end">
                                    <a asp-action="Download" asp-route-fileName="@fileName" class="btn btn-outline-success btn-sm rounded-pill me-2">
                                        <i class="bi bi-download"></i> Download
                                    </a>

                                    <form asp-action="Delete" asp-route-fileName="@fileName" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-outline-danger btn-sm rounded-pill"
                                                onclick="return confirm('Are you sure you want to delete @fileName?');">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="text-center p-4 text-muted">No contracts found.</div>
            }
        </div>
    </div>
</div>