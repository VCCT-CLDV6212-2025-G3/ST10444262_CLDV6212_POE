@model ST10444262_CLDV6212_POE.Models.Customer

@{
    ViewData["Title"] = "Customer Details";
}

<div class="container mt-4">
    <h1 class="mb-4 fw-bold"><i class="bi bi-person-lines-fill me-2"></i> Customer Details</h1>

    <div class="card shadow-sm border-0 p-4">
        <dl class="row">
            <dt class="col-sm-4 fw-semibold">
                @Html.DisplayNameFor(model => model.CustomerName)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.CustomerName)
            </dd>
            <dt class="col-sm-4 fw-semibold">
                @Html.DisplayNameFor(model => model.CustomerEmail)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.CustomerEmail)
            </dd>
            <dt class="col-sm-4 fw-semibold">
                @Html.DisplayNameFor(model => model.CustomerId)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.CustomerId)
            </dd>
        </dl>

        <div class="d-flex justify-content-between mt-3">
            <a asp-action="Edit" asp-route-id="@Model.RowKey" class="btn btn-outline-info rounded-pill px-4">
                <i class="bi bi-pencil-fill me-2"></i> Edit
            </a>
            <a asp-action="GetAll" class="btn btn-outline-secondary rounded-pill px-4">
                <i class="bi bi-arrow-left-circle-fill me-2"></i> Back to List
            </a>
        </div>
    </div>
</div>