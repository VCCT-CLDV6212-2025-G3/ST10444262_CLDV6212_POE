@model IEnumerable<ST10444262_CLDV6212_POE.Models.Customer>

@{
    ViewData["Title"] = "Customers";
}

<div class="container mt-4">
    <h1 class="mb-4 fw-bold"><i class="bi bi-people-fill me-2"></i> All Customers</h1>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <a asp-action="Create" class="btn btn-outline-success rounded-pill px-4">
            <i class="bi bi-plus-circle-fill me-2"></i> New Customer
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white fw-semibold">
            Customer List
        </div>
        <div class="card-body p-0">
            @if (Model != null && Model.Any())
            {
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.CustomerName)</th>
                            <th>@Html.DisplayNameFor(model => model.CustomerEmail)</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.CustomerName)</td>
                                <td>@Html.DisplayFor(modelItem => item.CustomerEmail)</td>
                                <td class="text-end">
                                    <a asp-action="Edit" asp-route-id="@item.RowKey" class="btn btn-outline-info btn-sm rounded-pill me-2">
                                        <i class="bi bi-pencil-fill"></i> Edit
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.RowKey" class="btn btn-outline-primary btn-sm rounded-pill me-2">
                                        <i class="bi bi-info-circle-fill"></i> Details
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.RowKey" class="btn btn-outline-danger btn-sm rounded-pill">
                                        <i class="bi bi-trash-fill"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="text-center p-4 text-muted">No customers found.</div>
            }
        </div>
    </div>
</div>