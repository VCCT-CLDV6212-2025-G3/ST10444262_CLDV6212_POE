@model ST10444262_CLDV6212_POE.Models.Customer

@{
    ViewData["Title"] = "Add Customer";
}

<div class="container mt-4">
    <h1 class="mb-4 fw-bold"><i class="bi bi-person-plus-fill me-2"></i> Add Customer</h1>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <form asp-action="CreateCustomer" method="post">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="mb-3">
                    <dt class="col-sm-3">Customer Name</dt>
                    <input asp-for="CustomerName" class="form-control rounded-pill" />
                    <span asp-validation-for="CustomerName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <dt class="col-sm-3">Customer Email</dt>
                    <input asp-for="CustomerEmail" class="form-control rounded-pill" />
                    <span asp-validation-for="CustomerEmail" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-outline-primary rounded-pill px-4">
                    <i class="bi bi-check-circle me-2"></i> Save
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                    <i class="bi bi-arrow-left me-2"></i> Cancel
                </a>
            </form>
        </div>
    </div>
</div>
