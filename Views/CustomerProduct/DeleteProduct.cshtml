@model ST10444262_CLDV6212_POE.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container mt-4">
    <h1 class="mb-4 text-danger fw-bold"><i class="bi bi-trash me-2"></i> Delete Product</h1>

    <div class="alert alert-warning rounded-pill px-4">
        <i class="bi bi-exclamation-triangle-fill me-2"></i> Are you sure you want to delete this product?
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.ProductName</dd>

                <dt class="col-sm-3">Category</dt>
                <dd class="col-sm-9">@Model.ProductDescription</dd>

                <dt class="col-sm-3">Price</dt>
                <dd class="col-sm-9">@Model.ProductPrice</dd>
            </dl>

            <form asp-action="DeleteProduct" method="post">
                <input type="hidden" asp-for="RowKey" />
                <button type="submit" class="btn btn-outline-danger rounded-pill px-4">
                    <i class="bi bi-trash me-2"></i> Delete
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4 ms-2">
                    <i class="bi bi-arrow-left me-2"></i> Cancel
                </a>
            </form>
        </div>
    </div>
</div>
