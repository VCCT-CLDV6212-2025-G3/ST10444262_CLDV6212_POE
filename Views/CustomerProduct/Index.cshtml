@model ST10444262_CLDV6212_POE.Models.CustomerProductViewModel

@{
    ViewData["Title"] = "Customer & Product Management";
}

<div class="container mt-4">
    <h1 class="mb-4 fw-bold">Customer & Product Management</h1>

    <!-- Customer Action button -->
    <div class="mb-3">
        <a asp-controller="CustomerProduct" asp-action="CreateCustomer" class="btn btn-outline-primary rounded-pill px-4">
            <i class="bi bi-person-plus-fill me-2"></i> Add Customer
        </a>
    </div>

    <!-- Customers Table -->
    <div class="card mb-4 shadow-sm border-0">
        <div class="card-header bg-primary text-white fw-semibold">
            Customers
        </div>
        <div class="card-body p-0">
            <table class="table align-middle table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Customer ID</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Customers != null && Model.Customers.Any())
                    {
                        foreach (var cust in Model.Customers)
                        {
                            <tr>
                                <td>@cust.CustomerName</td>
                                <td>@cust.CustomerEmail</td>
                                <td>@cust.CustomerId</td>
                                <td class="text-end">
                                    <a asp-action="EditCustomer" asp-route-id="@cust.RowKey"
                                       class="btn btn-outline-warning btn-sm rounded-pill me-2">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a asp-action="DeleteCustomer" asp-route-id="@cust.RowKey"
                                       class="btn btn-outline-danger btn-sm rounded-pill">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted py-4">No customers found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Product Action button -->
    <div class="mb-3">
        <a asp-controller="CustomerProduct" asp-action="CreateProduct" class="btn btn-outline-success rounded-pill px-4">
            <i class="bi bi-bag-plus-fill me-2"></i> Add Product
        </a>
    </div>

    <!-- Products Table -->
    <div class="card shadow-sm border-0">
        <div class="card-header bg-success text-white fw-semibold">
            Products
        </div>
        <div class="card-body p-0">
            <table class="table align-middle table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Product Name</th>
                        <th>Category</th>
                        <th>Price</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Products != null && Model.Products.Any())
                    {
                        foreach (var prod in Model.Products)
                        {
                            <tr>
                                <td>@prod.ProductName</td>
                                <td>@prod.ProductDescription</td>
                                <td>@prod.ProductPrice.ToString()</td>
                                <td class="text-end">
                                    <a asp-action="EditProduct" asp-route-id="@prod.RowKey"
                                       class="btn btn-outline-warning btn-sm rounded-pill me-2">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a asp-action="DeleteProduct" asp-route-id="@prod.RowKey"
                                       class="btn btn-outline-danger btn-sm rounded-pill">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted py-4">No products found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
