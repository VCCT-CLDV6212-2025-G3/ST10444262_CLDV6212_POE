@model IEnumerable<ST10444262_CLDV6212_POE.Models.Blob.BlobFileViewModel>

@{
    ViewData["Title"] = "Multimedia Management";
}

<div class="container mt-4">
    <h1 class="mb-4 fw-bold"><i class="bi bi-image me-2"></i> Multimedia Management</h1>

    <!-- Upload Form -->
    <div class="card shadow-sm border-0 mb-4 p-4">
        <form asp-action="Upload" method="post" enctype="multipart/form-data">
            <div class="input-group">
                <input type="file" name="file" accept="image/*" class="form-control rounded-pill" required />
                <button type="submit" class="btn btn-outline-primary rounded-pill ms-2 px-4">
                    <i class="bi bi-cloud-upload-fill me-2"></i> Upload Image
                </button>
            </div>
        </form>
    </div>

    <!-- Files List -->
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white fw-semibold">
            Uploaded Images
        </div>
        <div class="card-body p-0">
            @if (Model != null && Model.Any())
            {
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>File Name</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var file in Model)
                        {
                            <tr>
                                <td>@file.FileName</td>
                                <td class="text-end">
                                    <a asp-action="Download" asp-route-fileName="@file.FileName"
                                       class="btn btn-outline-primary btn-sm rounded-pill me-2" title="Download">
                                        <i class="bi bi-download"></i> Download
                                    </a>

                                    <button type="button" class="btn btn-outline-primary btn-sm rounded-pill me-2 preview-btn"
                                            data-bs-toggle="modal" data-bs-target="#imageModal"
                                            data-img-url="@file.Url" data-img-alt="@file.FileName" title="Preview">
                                        <i class="bi bi-eye"></i> Preview
                                    </button>

                                    <form asp-action="Delete" asp-route-fileName="@file.FileName" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-outline-danger btn-sm rounded-pill" title="Delete"
                                                onclick="return confirm('Are you sure you want to delete @file.FileName?');">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="text-center p-4 text-muted">No images uploaded yet.</div>
            }
        </div>
    </div>

<!-- Modal HTML -->
<div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content bg-transparent border-0">
            <div class="modal-body p-0 position-relative">
                <button type="button" class="btn-close btn-close-white position-absolute top-0 end-0 m-3" data-bs-dismiss="modal" aria-label="Close"></button>
                <img id="modalImage" src="" alt="" class="img-fluid rounded shadow" style="width: 100%; max-height: 80vh; object-fit: contain;" />
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var imageModal = document.getElementById('imageModal');
        var modalImage = document.getElementById('modalImage');

        imageModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var imageUrl = button.getAttribute('data-img-url');
            var imageAlt = button.getAttribute('data-img-alt');

            modalImage.src = imageUrl;
            modalImage.alt = imageAlt;
        });

        imageModal.addEventListener('hidden.bs.modal', function () {
            modalImage.src = '';
            modalImage.alt = '';
        });
    </script>
}
