@model ST10444262_CLDV6212_POE.Models.Order

@{
    ViewData["Title"] = "Delete Order";
}

<div class="container mt-4">
    <h1 class="mb-4 fw-bold text-danger"><i class="bi bi-trash-fill me-2"></i> Delete Order</h1>
    <h4 class="mb-3">Are you sure you want to delete this order?</h4>

    <div class="card shadow-sm border-0 p-4">
        <dl class="row">
            <dt class="col-sm-4 fw-semibold">
                @Html.DisplayNameFor(model => model.OrderID)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.OrderID)
            </dd>
            <dt class="col-sm-4 fw-semibold">
                @Html.DisplayNameFor(model => model.CustomerName)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.CustomerName)
            </dd>
            <dt class="col-sm-4 fw-semibold">
                @Html.DisplayNameFor(model => model.ProductName)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.ProductName)
            </dd>
            <dt class="col-sm-4 fw-semibold">
                @Html.DisplayNameFor(model => model.OrderDate)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.OrderDate)
            </dd>
        </dl>

        <form asp-action="Delete" asp-route-rowKey="@Model.RowKey" method="post">
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-danger rounded-pill px-4">
                    <i class="bi bi-trash-fill me-2"></i> Confirm Delete
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                    <i class="bi bi-arrow-left-circle-fill me-2"></i> Back to List
                </a>
            </div>
        </form>
    </div>
</div>