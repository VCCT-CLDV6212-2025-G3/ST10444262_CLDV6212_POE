@model ST10444262_CLDV6212_POE.Models.Order

@{
    ViewData["Title"] = "Order Details";
}

<div class="container mt-4">
    <h1 class="mb-4 fw-bold"><i class="bi bi-info-circle-fill me-2"></i> Order Details</h1>

    <div class="card shadow-sm border-0 p-4">
        <h4 class="card-title fw-semibold">Order Information</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-4 fw-semibold">
                @Html.DisplayNameFor(model => model.OrderID)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.OrderID)
            </dd>

            <dt class="col-sm-4 fw-semibold">
                @Html.DisplayNameFor(model => model.CustomerName)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.CustomerName)
            </dd>

            <dt class="col-sm-4 fw-semibold">
                @Html.DisplayNameFor(model => model.ProductName)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.ProductName)
            </dd>

            <dt class="col-sm-4 fw-semibold">
                @Html.DisplayNameFor(model => model.OrderDate)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.OrderDate)
            </dd>
        </dl>
    </div>

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
            <i class="bi bi-arrow-left-circle-fill me-2"></i> Back to List
        </a>
    </div>
</div>