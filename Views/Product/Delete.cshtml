@model ST10444262_CLDV6212_POE.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container mt-4">
    <h1 class="mb-4 fw-bold text-danger"><i class="bi bi-trash-fill me-2"></i> Delete Product</h1>
    <h4 class="mb-3">Are you sure you want to delete this product?</h4>

    <div class="card shadow-sm border-0 p-4">
        <dl class="row">
            <dt class="col-sm-4 fw-semibold">
                Product Image
            </dt>
            <dd class="col-sm-8">
                @if (!string.IsNullOrEmpty(Model.ProductFileUrl))
                {
                    <img src="@Model.ProductFileUrl" alt="@Model.ProductName" class="img-fluid" style="max-height: 150px; border-radius: 8px; border: 1px solid #ddd;" />
                }
                else
                {
                    <img src="https://placehold.co/150x150/E0E0E0/6C757D?text=No+Image" alt="No Image" class="img-fluid" style="max-height: 150px; border-radius: 8px; border: 1px solid #ddd;" />
                }
            </dd>
            <dt class="col-sm-4 fw-semibold">
                @Html.DisplayNameFor(model => model.ProductName)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.ProductName)
            </dd>
            <dt class="col-sm-4 fw-semibold">
                @Html.DisplayNameFor(model => model.ProductDescription)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.ProductDescription)
            </dd>
            <dt class="col-sm-4 fw-semibold">
                @Html.DisplayNameFor(model => model.ProductPrice)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.ProductPrice)
            </dd>
            <dt class="col-sm-4 fw-semibold">
                @Html.DisplayNameFor(model => model.ProductID)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.ProductID)
            </dd>
        </dl>

        <form asp-action="Delete" asp-route-id="@Model.RowKey" method="post">
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-danger rounded-pill px-4">
                    <i class="bi bi-trash-fill me-2"></i> Confirm Delete
                </button>
                <a asp-action="GetAll" class="btn btn-outline-secondary rounded-pill px-4">
                    <i class="bi bi-arrow-left-circle-fill me-2"></i> Back to List
                </a>
            </div>
        </form>
    </div>
</div>