@model ST10444262_CLDV6212_POE.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-4">
    <h1 class="mb-4 fw-bold"><i class="bi bi-box me-2"></i> Product Details</h1>

    <div class="card shadow-sm border-0 p-4">
        <dl class="row">
            <dt class="col-sm-4 fw-semibold">
                Product Image
            </dt>
            <dd class="col-sm-8">
                @if (!string.IsNullOrEmpty(Model.ProductFileUrl))
                {
                    <img src="@Model.ProductFileUrl" alt="@Model.ProductName" class="img-fluid" style="max-height: 200px; border-radius: 8px; border: 1px solid #ddd;" />
                }
                else
                {
                    <img src="https://placehold.co/200x200/E0E0E0/6C757D?text=No+Image" alt="No Image" class="img-fluid" style="max-height: 200px; border-radius: 8px; border: 1px solid #ddd;" />
                }
            </dd>
            <dt class="col-sm-4 fw-semibold">
                @Html.DisplayNameFor(model => model.ProductName)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.ProductName)
            </dd>
            <dt class="col-sm-4 fw-semibold">
                @Html.DisplayNameFor(model => model.ProductDescription)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.ProductDescription)
            </dd>
            <dt class="col-sm-4 fw-semibold">
                @Html.DisplayNameFor(model => model.ProductPrice)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.ProductPrice)
            </dd>
            <dt class="col-sm-4 fw-semibold">
                @Html.DisplayNameFor(model => model.ProductID)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.ProductID)
            </dd>
        </dl>

        <div class="d-flex justify-content-between mt-3">
            <a asp-action="Edit" asp-route-id="@Model.RowKey" class="btn btn-outline-info rounded-pill px-4">
                <i class="bi bi-pencil-fill me-2"></i> Edit
            </a>
            <a asp-action="GetAll" class="btn btn-outline-secondary rounded-pill px-4">
                <i class="bi bi-arrow-left-circle-fill me-2"></i> Back to List
            </a>
        </div>
    </div>
</div>