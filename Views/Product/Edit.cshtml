@model ST10444262_CLDV6212_POE.Models.Product

@{
    ViewData["Title"] = "Edit Product";
}

<div class="container mt-4">
    <h1 class="mb-4 fw-bold"><i class="bi bi-box-arrow-in-up-right me-2"></i> Edit Product</h1>

    <div class="card shadow-sm border-0 p-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="RowKey" />
            <input type="hidden" asp-for="ETag" />
            <input type="hidden" asp-for="PartitionKey" />
            <input type="hidden" asp-for="ProductFileName" />
            <input type="hidden" asp-for="ProductFileUrl" />

            <div class="mb-3">
                <label asp-for="ProductName" class="form-label fw-semibold"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ProductDescription" class="form-label fw-semibold"></label>
                <textarea asp-for="ProductDescription" class="form-control" rows="3"></textarea>
                <span asp-validation-for="ProductDescription" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ProductPrice" class="form-label fw-semibold"></label>
                <input asp-for="ProductPrice" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="ProductPrice" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Current Image</label>
                @if (!string.IsNullOrEmpty(Model.ProductFileUrl))
                {
                    <img src="@Model.ProductFileUrl" alt="@Model.ProductName" class="img-thumbnail d-block mb-2" style="max-width: 150px; height: auto; border-radius: 8px;" />
                }
                else
                {
                    <p class="text-muted">No image uploaded.</p>
                }
                <label for="newImageFile" class="form-label fw-semibold">Upload New Image (optional)</label>
                <input type="file" id="newImageFile" name="newImageFile" class="form-control" accept="image/*" />
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-outline-primary rounded-pill px-4">
                    <i class="bi bi-save-fill me-2"></i> Save Changes
                </button>
                <a asp-action="GetAll" class="btn btn-outline-secondary rounded-pill px-4">
                    <i class="bi bi-arrow-left-circle-fill me-2"></i> Back to List
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}