@model IEnumerable<ST10444262_CLDV6212_POE.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<div class="container mt-4">
    <h1 class="mb-4 fw-bold"><i class="bi bi-box-seam-fill me-2"></i> All Products</h1>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <a asp-action="Create" class="btn btn-outline-success rounded-pill px-4">
            <i class="bi bi-plus-circle-fill me-2"></i> New Product
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white fw-semibold">
            Product List
        </div>
        <div class="card-body p-0">
            @if (Model != null && Model.Any())
            {
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Image</th>
                            <th>@Html.DisplayNameFor(model => model.ProductName)</th>
                            <th>@Html.DisplayNameFor(model => model.ProductDescription)</th>
                            <th>@Html.DisplayNameFor(model => model.ProductPrice)</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.ProductFileUrl))
                                    {
                                        <img src="@item.ProductFileUrl" alt="@item.ProductName" style="width: 70px; height: 70px; object-fit: cover; border-radius: 8px; border: 1px solid #ddd;" />
                                    }
                                    else
                                    {
                                        <img src="https://placehold.co/70x70/E0E0E0/6C757D?text=No+Image" alt="No Image" style="width: 70px; height: 70px; object-fit: cover; border-radius: 8px; border: 1px solid #ddd;" />
                                    }
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.ProductName)</td>
                                <td>@Html.DisplayFor(modelItem => item.ProductDescription)</td>
                                <td>@Html.DisplayFor(modelItem => item.ProductPrice)</td>
                                <td class="text-end">
                                    <a asp-action="Edit" asp-route-id="@item.RowKey" class="btn btn-outline-info btn-sm rounded-pill me-2">
                                        <i class="bi bi-pencil-fill"></i> Edit
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.RowKey" class="btn btn-outline-primary btn-sm rounded-pill me-2">
                                        <i class="bi bi-info-circle-fill"></i> Details
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.RowKey" class="btn btn-outline-danger btn-sm rounded-pill">
                                        <i class="bi bi-trash-fill"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="text-center p-4 text-muted">No products found.</div>
            }
        </div>
    </div>
</div>